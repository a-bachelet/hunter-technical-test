<h1>AI Cold Email Writer</h1>

<%= form_with url: '/write', method: :post, data: { turbo: false } do |form| %>
  <div>
    <%= form.label :purpose, "Email Purpose" %>
    <%= form.text_area :purpose, placeholder: "Write the purpose of your cold email...", rows: 4 %>
  </div>

  <div>
    <%= form.label :recipient, "Recipient" %>
    <%= form.text_field :recipient, placeholder: "Recipient" %>
  </div>

  <div>
    <%= form.label :sender, "Sender" %>
    <%= form.text_field :sender, placeholder: "Sender" %>
  </div>

  <div>
    <%= form.submit "Generate" %>
  </div>
<% end %>
